      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Cutomer Detail</h4>
      </div>
      <div class="modal-body" data-ng-if="customerCtrl.customerDetail">
      <div class="col-lg-12">
          <div class="col-xs-7 modal-image-container">
              <a href="javascript:void(0)" class="thumbnail">
                  <img src="/static/assets/upload/xx.jpg" class="img-rounded center-block" alt="Cinque Terre">
              </a>
          </div>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <tbody>
                <tr>
                    <td>Name</td>
                    <td><%=customer.full_name%></td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td><%=customer.email%></td>
                </tr>
                <tr>
                    <td>Phone-no</td>
                    <td><%=customer.phone_no%></td>
                </tr>
                <tr>
                    <td>State</td>
                    <td><%=customer.addresses.state.name%></td>
                </tr>
                <tr>
                    <td>City</td>
                    <td><%=customer.addresses.city.name%></td>
                </tr>
            </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
      </div>