<% layout('../portal_layout') %>
<% include ../left_header %>
<div id="wrapper">
    <!-- Navigation -->
      <div id="wrapper">
          <div id="page-wrapper">
              <div class="row">
                  <div class="col-lg-12">
                      <h1 class="page-header page_title">Foodcourt List</h1>
                  </div>
                  <div class="col-lg-2 add_btn" >
                    <button class="btn btn-success pop-link" data-href="/portal/foodcourt/add" data-toggle="modal" data-target="#popup">Add Foodcourt</button>
                  </div>
              </div>

    <div class="row">
    <div class="col-lg-12">
    <div class="panel panel-default">
    <!--<div class="panel-heading">
    Basic Table
    </div>-->
    <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
          <thead>
              <tr>
                  <th>SL</th>
                  <th>Name</th>
                  <th>Email </th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th>Action</th>
              </tr>
          </thead>
          <tbody>
            <% if(typeof foodcourt!='undefined' && foodcourt.length>0 && status=='success'){ %>
                <% var counter=1 %>
                <% for(var i=0; i < foodcourt.length; i++) { %>
                  <tr>
                        <td><%= counter++ %></td>
                        <td><%=foodcourt[i].full_name %></td>
                        <td><%= foodcourt[i].email %></td>
                        <td> <%= foodcourt[i].phone_no %></td>
                        <td><span><%=foodcourt[i].status==1?'Active':'Inactive'%></span> </td>
                        <td>
                          <a href="javascript:void(0)"  alt="View Detail" title="View Detail" data-toggle="modal" data-target="#popup" class="pop-link" data-href="/portal/feedcourt/view/<%=foodcourt[i].id%>"><img src="/static/assets/images/info.png" class="status_icon"></a>
                          
                          <a href="/portal/foodcourt/restaurants/<%= foodcourt[i].id %>"  alt="View Restaurants" title="View Restaurants"><img src="/static/assets/images/restaurant.png" class="status_icon"></a>
                          
                          <a href="/portal/foodcourt/changestatus/<%=foodcourt[i].id%>">
                            <% if(foodcourt[i].status==0){ %>
                                <img src="/static/assets/images/inactive.png" class="status_icon"  alt="Click to Inactive" title="Click to Inactive">
                            <% }else if(foodcourt[i].status==1){ %>
                                <img src="/static/assets/images/active.png" class="status_icon"  alt="Click to Active" title="Click to Active">
                            <% } %>
                          </a>
                          &nbsp;
                          <a href="javascript:void(0)" alt="Edit Menu" title="Edit Foodcourt" data-toggle="modal" data-target="#popup" class="pop-link" data-href="/portal/foodcourt/edit/<%=foodcourt[i].id%>"><img src="/static/assets/images/edit.png" class="status_icon"></a>
                        </td>
                  </tr>
                <% } %>
              <% }else{ %>
                  <tr><td align="center" colspan="6">No Result Found.</td></tr>
              <% } %>
          </tbody>
      </table>
  </div>
  </div>
  </div>
  </div>
  </div>
    </div>
  </div>
  </div>