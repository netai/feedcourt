<div id="wrapper">
    <!-- Navigation -->
      <div data-ng-include="'templates/header_with_left.html'"></div>
      <div id="wrapper">
          <div id="page-wrapper">
              <div class="row">
                  <div class="col-lg-12">
                      <h1 class="page-header page_title">Foodcourt List</h1>
                  </div>
                  <div class="col-lg-2 add_btn" >
                    <a class="btn btn-success" href="#/foodcourt/add">Add Foodcourt</a>
                  </div>
              </div>

    <div class="row">
    <div class="col-lg-12">
    <div class="panel panel-default">
    <!--<div class="panel-heading">
    Basic Table
    </div>-->
    <div class="panel-body">
    <div class="table-responsive">
     <div class="form-group col-lg-4">
      <input type="text" class="form-control" name="searchKeyword" data-ng-model="searchKeyword" placeholder="Search">
     </div>
      <table class="table">
          <thead>
              <tr>
                  <th>SL</th>
                  <th>
                    <a href="" data-ng-click="reverse=false;order('name', false)">Name</a>
          					(<a href="" data-ng-click="order('-name',false)">^</a>)
                  </th>
                  <th>
                    <a href="" data-ng-click="reverse=false;order('email', false)">Email</a>
          					(<a href="" data-ng-click="order('-email',false)">^</a>)
                  </th>
                  <th>Phone</th>
                  <th>Action</th>
              </tr>
          </thead>
          <tbody>
            <tr data-ng-show="foodcourts.data.length<=0 || !foodcourts"><td align="center" colspan="6">No Result Found.</td></tr>
              <tr data-ng-repeat="foodcourt in foodcourts.data | orderBy:['+name','+email'] | filter:searchKeyword">
                    <td>{{$index+1}}</td>
                    <td>
                      <span data-ng-show="foodcourt.full_name.length > 0 ">{{foodcourt.full_name}}</span>
                      <span data-ng-show="foodcourt.full_name.length < 1 || !foodcourt.full_name">---</span>
                    </td>
                    <td>
                      <span data-ng-show="foodcourt.email.length > 0 ">{{foodcourt.email}}</span>
                      <span data-ng-show="foodcourt.email.length < 1 || !foodcourt.email">---</span>
                    </td>
                    <td>
                      <span data-ng-show="foodcourt.phone_no.length > 0 ">{{foodcourt.phone_no}}</span>
                      <span data-ng-show="foodcourt.phone_no.length < 1 || !foodcourt.phone_no">---</span>
                    </td>
                    <td>
                      <a href="javascript:void(0)" data-ng-click="foodcourtCtrl.viewDetail(foodcourt)" alt="View Detail" title="View Detail" data-toggle="modal" data-target="#viewDetail"><img src="./static/assets/images/info.png" class="status_icon"></a>
                      <a href="#foodcourts/restaurants/{{foodcourt.id}}"  alt="View Restaurants" title="View Restaurants"><img src="./static/assets/images/restaurant_64.png" class="status_icon"></a>
                      <a href="javascript:void(0)"  data-ng-click="foodcourtCtrl.changeStatus(foodcourt)">
                        <img src="./static/assets/images/inactive_32.png" class="status_icon" data-ng-if="foodcourt.status==0" alt="Click to Active" title="Click to Active">
                        <img src="./static/assets/images/active_32.png" class="status_icon" data-ng-if="foodcourt.status==1" alt="Click to Inactive" title="Click to Inactive">
                      </a>
                  </td>
                </tr>
          </tbody>
      </table>
  </div>
  </div>
  </div>
  </div>
  </div>
    </div>
  </div>
  </div>

<!-----./Modal Pop-Up------->
<div id="viewDetail" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Detail Info</h4>
      </div>
      <div class="modal-body" data-ng-if="foodcourtCtrl.foodcourtDetail">
      <div class="col-lg-12">
          <div class="col-xs-7 modal-image-container">
              <a href="javascript:void(0)" class="thumbnail">
                  <img src="../../static/assets/upload/xx.jpg" class="img-rounded center-block" alt="Cinque Terre">
              </a>
          </div>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <tbody>
                <tr>
                    <td>Name</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.full_name}}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.email}}</td>
                </tr>
                <tr>
                    <td>Phone-no</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.phone_no}}</td>
                </tr>
                <tr>
                    <td>State</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.addresses.state.name}}</td>
                </tr>
                <tr>
                    <td>City</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.addresses.city.name}}</td>
                </tr>
            </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!-----./Modal Pop-Up------->
