<% layout('../portal_layout') %>
<% include ../left_header %>
<div id="wrapper">
    <!-- Navigation -->
      <div data-ng-include="'templates/header_with_left.html'"></div>
      <div id="wrapper">
          <div id="page-wrapper">
              <div class="row">
                  <div class="col-lg-12">
                      <h1 class="page-header page_title">Foodcourt List</h1>
                  </div>
                  <div class="col-lg-2 add_btn" >
                    <a class="btn btn-success" href="#/foodcourt/add">Add Foodcourt</a>
                  </div>
              </div>

    <div class="row">
    <div class="col-lg-12">
    <div class="panel panel-default">
    <!--<div class="panel-heading">
    Basic Table
    </div>-->
    <div class="panel-body">
    <div class="table-responsive">
      <table class="table">
          <thead>
              <tr>
                  <th>SL</th>
                  <th>Name</th>
                  <th>Email </th>
                  <th>Phone</th>
                  <th>Action</th>
              </tr>
          </thead>
          <tbody>
            <% if(dataJsonArr.data!=undefined && dataJsonArr.data.length>0 && (dataJsonArr.status!=undefined && dataJsonArr.status=='success')){ %>
                <% var counter=1 %>
                <% for(var i=0; i < dataJsonArr.data.length; i++) { %>
                  <tr>
                        <td><%= counter++ %></td>
                        <td><%= dataJsonArr.data[i].full_name %></td>
                        <td><%= dataJsonArr.data[i].email %></td>
                        <td> <%= dataJsonArr.data[i].phone_no %></td>
                        <td>
                          <a href="javascript:void(0)"  alt="View Detail" title="View Detail" data-toggle="modal" data-target="#viewDetail"><img src="./static/assets/images/info.png" class="status_icon"></a>
                          <a href="<%= dataJsonArr.data[i].id %>"  alt="View Restaurants" title="View Restaurants"><img src="./static/assets/images/restaurant_64.png" class="status_icon"></a>
                          <a href="javascript:void(0)">
                            <% if(dataJsonArr.data[i].status==0){ %>
                                <img src="./static/assets/images/inactive_32.png" class="status_icon"  alt="Click to Active" title="Click to Active">
                            <% }else if(dataJsonArr.data[i].status==1){ %>
                                <img src="./static/assets/images/active_32.png" class="status_icon"  alt="Click to Inactive" title="Click to Inactive">
                            <% } %>
                          </a>
                        </td>
                  </tr>
                <% } %>
              <% }else{ %>
                  <tr><td align="center" colspan="6">No Result Found.</td></tr>
              <% } %>
          </tbody>
      </table>
  </div>
  </div>
  </div>
  </div>
  </div>
    </div>
  </div>
  </div>

<!-----./Modal Pop-Up------->
<div id="viewDetail" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Detail Info</h4>
      </div>
      <div class="modal-body" data-ng-if="foodcourtCtrl.foodcourtDetail">
      <div class="col-lg-12">
          <div class="col-xs-7 modal-image-container">
              <a href="javascript:void(0)" class="thumbnail">
                  <img src="../../static/assets/upload/xx.jpg" class="img-rounded center-block" alt="Cinque Terre">
              </a>
          </div>
        </div>
        <table class="table table-striped table-bordered table-hover">
            <tbody>
                <tr>
                    <td>Name</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.full_name}}</td>
                </tr>
                <tr>
                    <td>Email</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.email}}</td>
                </tr>
                <tr>
                    <td>Phone-no</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.phone_no}}</td>
                </tr>
                <tr>
                    <td>State</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.addresses.state.name}}</td>
                </tr>
                <tr>
                    <td>City</td>
                    <td>{{foodcourtCtrl.foodcourtDetail.addresses.city.name}}</td>
                </tr>
            </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<!-----./Modal Pop-Up------->
