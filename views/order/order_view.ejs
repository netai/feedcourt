      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Order Detail</h4>
      </div>
      <div class="modal-body">
            <div class="col-lg-4 pull-right">
              <div class="">Invoice No :#123334</div>
              <div class="">Date : 12-13-2016</div>
            </div>
        <% if(typeof orders!='undefined' && orders.length>0){ %>
            <% for(var i=0;i<orders.length;i++){ %>
                <table class="table table-striped table-bordered table-hover">
                    <tbody>
                        <tr>
                            <td>Invoice No</td>
                            <td><%= orders[i].invoice_id %></td>
                        </tr>
                        <tr>
                            <td>Subtotal Amount</td>
                            <td><%= orders[i].orderMaster.sub_total_amount %></td>
                        </tr>
                        <tr>
                            <td>Total Amount</td>
                            <td><%= orders[i].orderMaster.total_amount %></td>
                        </tr>
                        <tr>
                            <td>Order Date</td>
                            <td><%= orders[i].order_date %></td>
                        </tr>
                        <tr>
                            <td>Restaurant Name</td>
                            <td><%= orders[i].restaurant.full_name %></td>
                        </tr>
                        <tr>
                            <td>Customer Name</td>
                            <td><%= orders[i].orderMaster.customer.full_name %></td>
                        </tr>
                        <tr>
                            <td>Bill Address</td>
                            <td>
                                Phone no:<%= orders[i].billAddress.phone_no %>,
                                State:<%= orders[i].billAddress.state.name %>
                                City:<%= orders[i].billAddress.city.name %>
                                Zip:<%= orders[i].billAddress.zip_code %>
                            </td>
                        </tr>
                        <tr>
                            <td>Ship Address</td>
                            <td>
                                Phone no:<%= orders[i].shipAddress.phone_no %>,
                                State:<%= orders[i].shipAddress.state.name %>
                                City:<%= orders[i].shipAddress.city.name %>
                                Zip:<%= orders[i].shipAddress.zip_code %>
                            </td>
                        </tr>
                    </tbody>
                </table>
            <% } %>
        <% }else{ %>
         <tbody><tr>No Order Found.</tr></tbody>
        <% } %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
      </div>