
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Menu Detail</h4>
      </div>
      <div class="modal-body">
          <% if(menu.menu_images.length>0 && menu.menu_images[0].img_name!=='undefined'){ %>      
                  <div class="col-lg-12">
                      <div class="col-xs-7 modal-image-container">
                             <a href="javascript:void(0)" class="thumbnail">
                              <img src="/media/images/thumb/<%=menu.menu_images[0].img_name%>" class="img-rounded center-block" alt="" style="height:150px">
                             </a>
                        </div>
                </div>
        <% } %>
        <table class="table table-striped table-bordered table-hover">
            <tbody>
                <% if(typeof menu!=='undefined'){ %>
                <tr>
                    <td>Menu Name</td>
                    <td><%=menu.title%></td>
                </tr>
                
                
                <%if(menu.menu_groups.id!==undefined){%>
                    <tr>
                        <td>Group</td>
                        <td><%=menu.menu_groups.name%></td>
                    </tr>
                    <tr>
                        <td>Group Description</td>
                        <td><%=menu.menu_groups.description%></td>
                    </tr>
                <%}%>
                <tr>
                    <td>Price</td>
                    <td><%=menu.price%></td>
                </tr>
                <tr>
                    <td>Unit</td>
                    <td><%if(typeof menu.unites.title!=undefined){%><%=menu.unites.title%><%}%></td>
                </tr>
                <tr>
                    <td>Order</td>
                    <td><%=menu.order_sequence%></td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td><%=menu.description%></td>
                </tr>
                
                <% } else { %>
                <tr>
                    No Record Found
                </tr>
                <% } %>
            </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
      </div>