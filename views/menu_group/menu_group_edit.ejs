      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit Group</h4>
      </div>
      <form role="form" method="post" action="/portal/menu_group_edit/<%=restaurant_id%>/<%=menu_group.id%>" id="editMenuGroupForm" name="editMenuGroupForm" enctype="multipart/form-data" >
      <input  type="hidden" name="group_id" value="<%=menu_group.id%>">
      <input  type="hidden" name="restaurant_id" value="<%=restaurant_id%>" >
      <div class="modal-body">
        <% if(menu_group.menu_group_images.length>0 && menu_group.menu_group_images[0].img_name!=='undefined'){ %>      
          <div class="col-lg-12">
            <div class="col-xs-7 modal-image-container">
                <a href="javascript:void(0)" class="thumbnail">
                    <img src="/media/images/thumb/<%=menu_group.menu_group_images[0].img_name%>" class="img-rounded center-block" alt="" style="height:150px">
                </a>
            </div>
          </div>
        <% } %>
        <div class="row">
            <div class="col-md-12">
              <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label">Name:</label>
                  <input  type="text" name="name" value="<%=menu_group.name%>" class="form-control required" autofocus >
                </div>
                </div>
                <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label">Description:</label>
                  <input  type="text" name="description" value="<%=menu_group.description%>" class="form-control" >
                </div>
                </div>
                <div class="col-md-6">
                <div class="form-group">
                  <label class="control-label">Image:</label>
                  <input type="file" class="form-control" name="image">
                </div>
                </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="button" class="btn btn-primary cancel" data-dismiss="modal">Cancel</button>
      </div>
      </form>
      
<script>
	$(document).ready(function(){
  	  $("#editMenuGroupForm").validate({});
	});
</script>